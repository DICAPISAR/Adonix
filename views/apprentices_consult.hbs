<!-- Consultar Apprentices -->

<br>
<div class="container">


    <div class="col-md-20">
        <h4>Consult Apprentices</h4>

        <br>

        <div class="container">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-6">
                    <div class="container">
                        <button type="button" class="btn btn-success btn-icon-text"
                            onclick="window.location.href='/apprentices/create/'">
                            <i class="fa-solid fa-plus"></i> Create New Record
                        </button>
                        {{#if hasDowloadRecordPermition}}
                        <a href="/apprentices/dowload" download="report_apprentices.xlsx">
                            <button type="button" class="btn btn-warning btn-icon-text" >
                                <i class="fa-solid fa-download"></i>
                                Download Records
                            </button>
                        </a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>

        <br>

        <div class="container">
            <div class="row">
                <div class="col-1"></div>
                <div class="col-3">
                    <div class="input-group rounded">
                        <input type="search" class="form-control rounded" placeholder="Search 🔍" aria-label="Search"
                            aria-describedby="search-addon" />
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="table-responsive">


                <table id="mytable" class="table table-bordred table-striped">

                    <thead>

                        <th><input type="checkbox" id="checkall" /></th>
                        <th>Number Identification</th>
                        <th>Name</th>
                        <th>ID CCMS</th>
                        <th>ID CECO</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Boss Name</th>
                        <th>ID CCMS Boss</th>
                        <th>Contract Start Date</th>
                        <th>End Date Study</th>
                        <th>Productive Start Date</th>
                        <th>Productive End Date</th>
                        <th>Count Days</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                        {{#each listApprentices}}
                        <tr>
                            <td><input type="checkbox" class="checkthis" /></td>
                            <td>{{app_identification}}</td>
                            <td>{{app_name}}</td>
                            <td>{{app_ccms_id}}</td>
                            <td>{{app_ceco_id}}</td>
                            <td>{{app_email}}</td>
                            <td>{{app_phone_number}}</td>
                            <td>{{app_name_boss}}</td>
                            <td>{{app_id_ccms_boss}}</td>
                            <td>{{app_contract_start_date}}</td>
                            <td>{{app_end_date_study}}</td>
                            <td>{{app_productive_start_date}}</td>
                            <td>{{app_productive_end_date}}</td>
                            <td>{{app_count_days}}</td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit"><button
                                        onclick="window.location.href='/apprentices/edit/{{app_id}}/'"
                                        class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal"
                                        data-target="#edit"><span><i class="fa-solid fa-pen-clip"></i></span></button>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Delete"><button
                                        onclick="deleteRecord({{app_id}})" class="btn btn-danger btn-xs"
                                        data-title="Delete" data-toggle="modal" data-target="#delete"><span><i
                                                class="fa-solid fa-trash-can"></i></span></button></p>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>

                </table>
            </div>
        </div>

        <br>
        <div class="container">
            <div class="row">
                <div class="col-9 ">
                    <p>Showing 1 to 10 of {{countRecords}} entries</p>
                </div>
                <div class="col-1 ">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            {{#each pagination}}
                            <li class="page-item"><a class="page-link" href="#">{{number}}</a></li>
                            {{/each}}
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function deleteRecord(idApprentice) {

        var result = confirm('Are you sure you want to delete this record?');

        if (result) {
            var url = "http://localhost:80/apprentices/delete/" + idApprentice;

            var xhr = new XMLHttpRequest();
            xhr.open("POST", url);

            xhr.onreadystatechange = function () {
            };

            xhr.send();

            setTimeout(function () {
                location.reload()
            }, 1000);

        }

    }
</script>