        var fechafin = new Date(document.getElementById('productiveEndDate').value + 'T00:00');
        var diasdif= fechafin.getTime()-fechaini.getTime();
        var contdias = Math.round(diasdif/(1000*60*60*24));
        
        var inputProductiveEndDate = document.getElementById('productiveEndDate');

        document.getElementById('countDays').setAttribute('value', contdias + 1) 
      
