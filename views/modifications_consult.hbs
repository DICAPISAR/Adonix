<!-- Consultar Apprentices -->

<br>
<div class="container">
    <div class="col-md-20">
        <h4>Consult Modifications</h4>
        <div class="container">
            <div class="row">
                <div class="col-7"></div>
                <div class="col-5 ">
                    <div class="container">
                        <button type="button" class="btn btn-success btn-icon-text"
                            onclick="window.location.href='/modifications/create/'">
                            <i class="fa-solid fa-plus"></i> Create New Record
                        </button>
                        <button type="button" class="btn btn-warning btn-icon-text">
                            <i class="fa-solid fa-download"></i>
                            Download Records
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <br>

        <div class="container">
            <div class="row">

                <div class="col-8">
                </div>

                <div class="col-3 ">
                    <div class="input-group rounded">
                        <input type="search" class="form-control rounded" placeholder="Search üîç" aria-label="Search"
                            aria-describedby="search-addon" />
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="table-responsive">


                <table id="mytable" class="table table-bordred table-striped">

                    <thead>

                        <th><input type="checkbox" id="checkall" /></th>
                        <th>Tipo de Modificaci√≥n</th>
                        <th>Numero de Identificaci√≥n Aprendiz</th>
                        <th>Fecha de Inicio</th>
                        <th>Fecha de Finalizaci√≥n</th>
                        <th>Cantidad de D√≠as</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </thead>
                    <tbody>
                        {{#each listModifications}}
                        <tr>
                            <td><input type="checkbox" class="checkthis" /></td>
                            <td>{{mod_type_modification}}</td>
                            <td>{{mod_apprentice_id}}</td>
                            <td>{{mod_date_start}}</td>
                            <td>{{mod_date_end}}</td>
                            <td>{{mod_count_day}}</td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Edit"><button onclick="window.location.href='/modifications/edit/{{mod_id}}/'"
                                        class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal"
                                        data-target="#edit"><span><i class="fa-solid fa-pen-clip"></i></span></button>
                                </p>
                            </td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Delete"><button onclick="deleteRecord({{mod_id}})"
                                        class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal"
                                        data-target="#delete"><span><i
                                                class="fa-solid fa-trash-can"></i></span></button></p>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>

                </table>
            </div>
        </div>

        <br>
        <div class="container">
            <div class="row">
                <div class="col-9 ">
                    <p>Showing 1 to 10 of {{countRecords}} entries</p>
                </div>
                <div class="col-1 ">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            {{#each pagination}}
                            <li class="page-item"><a class="page-link" href="#">{{number}}</a></li>
                            {{/each}}
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    function deleteRecord(idModification) {

        var result = confirm('Are you sure you want to delete this record?');

        if (result) {
            var url = "http://localhost:80/modifications/delete/" + idModification;

            var xhr = new XMLHttpRequest();
            xhr.open("POST", url);

            xhr.onreadystatechange = function () {
            };

            xhr.send();

            setTimeout(function(){
                location.reload()
            }, 1000);
            
        }       
        
    }
</script>